<!DOCTYPE html>
<html>
<head>
    <%-include('../partials/head')%>
    <link href ="/css/user-profile.css", rel="stylesheet">
    <title>NFTART- Usuario </title>
</head>

<body>
    
    <%-include("../partials/header")%>

    <!-- Cuerpo -->
    <!-- <section>
        <div>
            <img src="/imagenes/OPCIÓN BANNER 2.jpg" class="banner">
        </div>
    </section> -->


    <!-- Presentacion -->
    <main>
            <section class= "Presentacion">
                <div class="circulo">
                    <img src="/img/AVATARES/<%=user.imagen%>" class="ok">
                </div>
                <div>
                    <h1 class="H1perfil"><%=user.nombre_usuario%></h1>
                    <h1 class="H2perfil"><%=user.usuario%></h2>
                    <ul class="Redessociales">
                        <li> <i class="Botonredes fab fa-facebook-square"></i> Facebook </li>
                        <li> <i class="Botonredes fab fa-instagram-square"></i> Instagram </li>
                        <li> <button class="Botoncompartir"><i class="fas fa-share-alt"></i></button> </li>
                    </ul>
                    <br><br>

                    <p><%=user.descripcion%></p>
                    <a href="/user/edit/<%=user.id%>">Editar</a>
                    <!-- <form method="post" action="/user/delete">
                    </form> -->
                </div>            
            </section>
    
    <!-- Menu Perfil -->
    
        <!-- <section>
            <div>
            <div class="Menuperfil">
            <ul class="Menuperfilb">
                <li class="Menuperfilc"> <a href="#" id='buttonCollection'> COLECCION </a></li>
                <li class="Menuperfilc"> <a href="#" id='buttonFavorites'> FAVORITOS </a></li>
                <li class="Menuperfilc"> <a href="#" id='buttonActivity'> ACTIVIDAD </a></li>
                <li class="Menuperfilc"> <a href="#" id='buttonOffers'> OFERTAS </a></li>
            </ul>
        </div>
            </div>
        </section> -->

    <!-- Submenu Perfil Colección, Creados, Favoritos  -->

        <section id='subMenuFilter'>
        <div>
            <nav class="Submenuperfil">
            <ul class= "Submenuperfilb">
                <button class="lupa"><i class='fas fa-search'></i></button>
                <input class='botonbusqueda'></input>
                    <li class="Submenuperfilc"> CATEGORÍA: </li>
                    <form class='Submenuperfillistado'>
                        <label class= "Submenuperfillistadob"> </label>
                        <select>
                            <option>Arte</option>
                            <option>Fotografía</option>
                            <option>Música</option>
                            <option>Simi</option>
                            <option>Metaverso</option>
                        </select>
                </form>
                    <li class="Submenuperfilc"> PRECIO: </li>
                    <form class='Submenuperfillistado'>
                        <label class= "Submenuperfillistadob"> </label>
                        <select>
                            <option>$0 - $5000</option>
                            <option>$5000 - $10000</option>
                            <option>$10000 - $20000</option>
                            <option>$20000 - $30000</option>
                            <option>$30000 - más</option>
                        </select>
                    </form>
            </ul>
            </nav>  
        </div>
        </section>     
    

          <!-- Submenu Perfil Actividad y Ofertas -->

          <section>
            <div>
            <div class= "Submenuperfilao"> 
                <ul class= "Submenuperfilaob">
                    <button class="lupa"><i class='fas fa-search'></i></button>
                    <input class='botonbusqueda'></input>
                </ul>
            </div> 
            </div> 
        </section>    

        <!-- Colección -->
        <section>
            <div class="products">
    
                <%for(let p of products){%>
    
                <a class="container_product_desc" href="/product/detail/<%=p.id%>">
                    <img src="/img/PRODUCTOS/<%=p.Categoria.categoria+'_'+p.id+'.jpg'%>" alt="NFT" class="product_img">
                    <div class="main-article">
                        <div>
                            <h2 class="name_product"><%=p.nombre_nft%></h2>
                            <p class="autor" id="hover"><%=p.Autor.autor%></p>
                        </div>
                        <div class="precios">
                            <p class="price">$<%=p.precio_actual_usd%></p>
                            <p class="price_cripto"><%=p.precio_actual_eth%> ETH</p>
                        </div>
                        <div class="carrito_corazon">
                            <i class="fas fa-heart" id="hover"></i>
                            <i class="fas fa-cart-arrow-down" id="hover" onclick="set(
                                {
                                    nombre_nft: `<%=p.nombre_nft %>`,
                                    precio_actual_usd: `<%=p.precio_actual_usd%>`,
                                    precio_actual_eth: `<%=p.precio_actual_eth%>`,
                                    autor: `<%=p.autor%>`
                                }
                            )"></i>
                        </div>
                    </div>
                </a>
                <%}%>
            </div>  
        </section>
    </main>

    <%- include('../partials/footer')%>

    <script src='/scripts/popUp.js'></script>
    <script src='/scripts/menu_mobile.js'></script>
</body>
</html>