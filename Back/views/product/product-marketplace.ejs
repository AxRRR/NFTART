<!DOCTYPE html>
<html>
<head>
    <%-include('../partials/head')%>
    <link href ="/css/product-marketplace.css", rel="stylesheet">
    <title>NFTART - Marketplace</title>
</head>

<body>

    <%-include('../partials/header')%>
    
    <!-- Banner por categoría -->
    <div class="container_banner">
        <img src="/img/BANNER_CATEGORIA_ARTE.jpg" 
        alt="Banner por categoría"
        class="banner-category">
    </div>

    <div class="busqueda_producto">
        <div class="container_div_filtro_categoria">
            <li id="filtros"> CATEGORIAS </li>
            <input class="input_sec" value="ARTE">
            </i></input>
        </div>
        
        <div class="container_div_filtro_precio">
            <li id="filtros"> PRECIO (US$) </li>
            <input class="input_sec" type="number" placeholder="MIN"></input>
            <input class="input_sec" type="number" placeholder="MAX"></input>
        </div>
        <div class="container_div_filtro_pago">
        <li id="filtros"> MEDIO DE PAGO</li>
        <input class="input_sec" value="CRIPTOS" ></input>
        </div>
    </div>

    <!-- Main: Vitrina de producto -->
    <main>
        <div class="products">
            <script>
                function TestHola(producto) {
                    return console.log(producto)
                }
            </script>

            <%for(let p of productos){%>

            <a class="container_product_desc" >
                <img src="/img/PRODUCTOS/<%=p.Categoria.categoria+'_'+p.id+'.jpg'%>" alt="NFT" class="product_img">
                <div class="main-article">
                    <div>
                        <h2 class="name_product"><%=p.nombre_nft%></h2>
                        <p class="autor" id="hover"><%=p.Autor.autor%></p>
                    </div>
                    <div class="precios">
                        <p class="price">$<%=p.precio_actual_usd%></p>
                        <p class="price_cripto"><%=p.precio_actual_eth%> ETH</p>
                    </div>
                    <div class="carrito_corazon">
                        <i class="fas fa-heart" id="hover"></i>
                        <i class="fas fa-cart-arrow-down" id="hover" onclick="set(
                            {
                                nombre_nft: `<%=p.nombre_nft %>`,
                                precio_actual_usd: `<%=p.precio_actual_usd%>`,
                                precio_actual_eth: `<%=p.precio_actual_eth%>`,
                                autor: `<%=p.autor%>`
                            }
                        )"></i>
                    </div>
                </div>
            </a>
            <%}%>
        </div>  
    </main>

    <%- include('../partials/footer') %>

    <script src="/js/Cart/cart.js"></script>
</body>
</html>