     <!-- Categorias -->
    <div class='categories__main'>
        <h1>Explora todas nuestras categorias</h1>
        <section class='categories__section'>
            <article>
                <i class="fas fa-palette"></i>
                <h3>Arte</h3>
                <p>Compra, vende o descubre todos los NFTs de Arte</p>
